pcspkd_start() {
    /usr/local/sbin/pcspkd
}

pcspkd_stop() {
    killall pcspkd
}

pcspkd_restart() {
    pcspkd_stop
    sleep 1
    pcspkd_start
}

case "$1" in
'start')
    pcspkd_start
    ;;
'stop')
    pcspkd_stop
    ;;
'restart')
    pcspkd_restart
    ;;
*)
    echo "usage $0 start|stop|restart"
esac